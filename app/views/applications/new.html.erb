<h1>New application</h1>

<%= form_for @application, :html => {multipart => true} do |f| %>
  <%= f.label :title %> <%= f.text_field :title %><br>
  <%= f.label :company %> <%= f.text_field :company %><br>
  <%= f.label :location %> <%= f.text_field :location %><br>
  <%= f.label :date %> <%= f.text_field :date %><br>
  <%= f.label :description %> <%= f.text_area :description %><br>
  <%= f.label :link %> <%= f.text_field :link %><br>
  <%= f.label :status %> <%= f.text_field :status %><br>
  <%= f.label :notes %> <%= f.text_area :notes %><br>
  <%= f.label :resume %> <%= f.file_field :resume %><br>
  <%= f.label :cover_letter %> <%= f.text_area :cover_letter %><br>
  <%= f.submit %>
<% end %>
